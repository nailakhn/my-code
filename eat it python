tom = Turtle()
tom.shape('turtle')
tom.color('yellow')
tom.width(5)
tom.speed(100)
#tom.tracer(20)
tom.left(25)
for c in range (300):
    tom.fd(200)
    tom.goto(0,0)
    tom.left(360.0/360)

tom.penup()
tom.left(25)
tom.fd(200)
tom.pendown()
tom.color('yellow')
tom.begin_fill()
tom.circle(25)
tom.end_fill()
tom.penup()
tom.goto(50,75)
tom.pendown()
tom.color('black')
tom.begin_fill()
tom.circle(25)
tom.end_fill()
