tom = Turtle()
tom.shape('turtle')
tom.color('blue')
tom.speed(100)
tom.tracer(20)
for c in range (150):
    tom.color('blue')
    tom.forward(100)
    tom.left(90)
    tom.forward(100)
    tom.right(90)
    tom.color('red')
    tom.backward(100)
    tom.color('pink')
    tom.left(90)
    tom.forward(100)
    tom.right(90)
    tom.color('aqua')
    tom.forward(100)
    tom.goto(0,0)
    tom.left(360.0/150)
    
